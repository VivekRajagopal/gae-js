{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2020"],
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "sourceMap": true,
    "incremental": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "composite": true
  }
}
